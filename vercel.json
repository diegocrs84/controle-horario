{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "build",
    "framework": "create-react-app",
    "functions": {
        "api/*.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "^/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": ".*",
            "dest": "/index.html"
        }
    ]
} 